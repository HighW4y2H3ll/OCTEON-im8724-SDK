include $(TOPDIR)/config.mk

LIB	= $(obj)librsa.o

ifdef CONFIG_FIT_SIGNATURE
COBJS-$(CONFIG_RSA) += rsa-verify.o
endif

COBJS	:= $(sort $(COBJS-y))
SRCS	:= $(COBJS:.o=.c)
OBJS	:= $(addprefix $(obj),$(COBJS))

$(LIB):	$(obj).depend $(OBJS)
	$(call cmd_link_o_target, $(OBJS))

#########################################################################

# defines $(obj).depend target
include $(SRCTREE)/rules.mk

sinclude $(obj).depend

#########################################################################
